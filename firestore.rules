rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /blogs/{blogId} {
      allow read: if !resource.data.deleted;
      allow write: if request.auth != null; // Chỉ người dùng đã xác thực mới có thể viết
    }
    
    match /{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}